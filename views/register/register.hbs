{{> header}}

<div class="row" id="register">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Register to our fitness system</strong>
            </div>
            <div class="panel-body">
                <form action="#/register" method="post" id="registerForm" class="form-group" role="form">
                    <fieldset id="regiter-form">
                        <div class="row">
                            <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                <div class="form-group">
                                    <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                        <input type="text" class="form-control" id="name-register" name="name-register" placeholder="First & Last Name" autocomplete="off" autofocus required/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                        <input type="text" class="form-control" id="username-register" name="username-register" placeholder="Username" autocomplete="off" autofocus required/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                        <input type="password" class="form-control" id="password-register" name="password-register"
                                               placeholder="Password" required/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-repeat"></i>
                                            </span>
                                        <input type="password" class="form-control" id="repeatPass" name="repeatPass"
                                               placeholder="Repeat Password" required/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="btnRegister" class="btn btn-lg btn-primary btn-block">Register</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

{{> footer}}