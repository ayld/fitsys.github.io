<div class="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <form class="form-horizontal" id="client-info">
        <h3 class="text-center">
            RESULT
        </h3>
        <hr>
        <div class="form-group">
            <label for="name" class="control-label col-sm-3">Name:</label>
            <div class="form-control-static col-sm-9">
                {{#if name}}
                    <label>{{formatName name}}</label>
                {{else}}
                    <label>{{name}}</label>
                {{/if}}
            </div>
        </div>
        <div class="carousel-inner">
            <div class="form-group">
                <label for="sex" class="control-label col-sm-3">Sex:</label>
                <div class="form-control-static col-sm-9">
                    {{#if sex}}
                        <label>{{toUpperCase sex}}</label>
                    {{else}}
                        <label>{{sex}}</label>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <label for="lbm" class="control-label col-sm-3">LBM:</label>
                <div class="form-control-static col-sm-4">
                    <label>{{lbm}}
                        <small> kg</small>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="weigh   class="control-label col-sm-3">Weight:</label>
                <div class="form-control-static col-sm-4">
                    <label>{{weight}}
                        <small> kg</small>
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>