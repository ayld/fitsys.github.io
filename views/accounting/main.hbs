<div class="container-fluid" id="accounting">
    <h2 class="trainer">{{formatName trainer}}</h2>
    <span class="role">{{role}}</span>
    {{> header}}
    <br><br>
    <table class="table table-striped table-responsive" id="clients-cards">
        {{#if isEmpty}}
            <thead>
            <tr>
                <th>&#35; Day</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Card</th>
                <th>Zone</th>
                <th><i class="glyphicon glyphicon-usd"></i> Price</th>
                <th><i class="glyphicon glyphicon-piggy-bank"></i> Payment</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Duration</th>
                <th>Action</th>
            </tr>
            </thead>
        {{else}}
            <thead>
            <tr>
                <th>&#35; Day</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Card</th>
                <th>Zone</th>
                <th><i class="glyphicon glyphicon-usd"></i> Price</th>
                <th><i class="glyphicon glyphicon-piggy-bank"></i> Payment</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Duration</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each cards}}
                {{> cards}}
            {{else}}
                <h2>No clients in database.</h2>
            {{/each}}
            </tbody>
            <tfoot>
            <tr>
                <td>Summary</td>
                <td>Cards: {{count}}</td>
                <td><a href="#/activeClients">Clients</a></td>
                <td><a href="#/inactiveCards"></a></td>
                <td>A: {{active}}%</td>
                <td>Total: {{total}}</td>
                <td>Wallet: {{paid}}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            </tfoot>
        {{/if}}
    </table>
    <a href="#/logSessions">
        <button type="submit" class="btn btn-default" data-toggle="confirmation">Log Session/s</button>
    </a>
</div>

{{> footer}}
