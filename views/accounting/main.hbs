{{> header}}

<div class="container-fluid" id="accounting">
    <h3>Welcome: {{formatName trainer}}</h3>

<table class="table table-bordered table-responsive" id="clients-cards">
    {{#if isEmpty}}
        <thead>
        <tr>
            <th>&#35; Day</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Card</th>
            <th>Zone</th>
            <th><i class="glyphicon glyphicon-usd"></i> Price</th>
            <th><i class="glyphicon glyphicon-piggy-bank"></i> Payment</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Duration</th>
            <th>Action</th>
        </tr>
        </thead>
    {{else}}
        <thead>
        <tr>
            <th>&#35; Day</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Card</th>
            <th>Zone</th>
            <th><i class="glyphicon glyphicon-usd"></i> Price</th>
            <th><i class="glyphicon glyphicon-piggy-bank"></i> Payment</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Duration</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each cards}}
            {{> clientReg}}
        {{else}}
            No clients in database.
        {{/each}}
        </tbody>
        <tfoot>
        <tr>
            <td>Summary</td>
            <td>Cards: {{count}}</td>
            <td></td>
            <td></td>
            <td></td>
            <td>Total: {{total}}</td>
            <td>Wage: {{paid}}</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        </tfoot>
    </table>
    {{/if}}
<button type="submit" class="btn btn-default">Log Session</button>
</div>

{{> footer}}
